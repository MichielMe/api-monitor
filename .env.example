# API Monitor Environment Variables
# Copy this file to .env and replace with your actual credentials

# Device authentication credentials
# Format: Use descriptive names for each device
ROUTER_PASSWORD=your_secure_router_password
PRISMON_PASSWORD=your_prismon_monitoring_password

# Add additional device credentials as needed
# DEVICE_NAME_PASSWORD=your_secure_password
# DEVICE_NAME_TOKEN=your_secure_token

# Certificates and SSL
# Set to 'true' to enable SSL certificate verification, 'false' to disable
# VERIFY_SSL=false

# Grafana configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin_password

# Prometheus configuration
# PROMETHEUS_RETENTION_TIME=15d

# Optional InfluxDB configuration if used
# INFLUXDB_URL=http://influxdb:8086
# INFLUXDB_TOKEN=your_influx_token
# INFLUXDB_ORG=your_org
# INFLUXDB_BUCKET=telegraf 